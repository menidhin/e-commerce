<div class="card-outer">
  <div class="card">  
    <h1>Log in</h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
      <div class="form-group col-12">    
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "Enter your email", :class => "form-control" %> <br> 
        <%= f.password_field :password, autocomplete: "current-password", :placeholder =>"Enter your password ", :class => "form-control" %><br>
        </div>

        <% if devise_mapping.rememberable? %>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", :class => "btn btn-success m-2" %>
        </div>
        <%= render "devise/shared/links" %>
      </div> 
    <% end %>
  </div>
  
</div>