<h1> Customers List </h1>
<%= link_to "Create New Customer", new_customer_path, :class => "btn btn-primary" %><br><br>
<table class= "table table-hover">
	<tr class= "bg-light">
		<td>Name</td>
		<td>Email</td>
		<td>Age</td>
		<td>Address</td>
		<td>Mobile Number</td>
		<td>Status</td>
		<td class= "text-center">Action</td>
	</tr>
	<% @customers.each do |customer| %>
		<tr>
			<td><%= customer.name %></td>
			<td><%= customer.email %></td>
			<td><%= customer.age %></td>
			<td><%= customer.address %></td>
			<td><%= customer.mobile_number %></td>
			<td><%= customer.status %></td>
			<td class="text-center">
				<%= link_to "View Customer", customer_path(customer), :class => "btn btn-dark" %>
				<%= link_to "Edit Customer", edit_customer_path(customer), :class => "btn btn-warning" %>
				<%= link_to "Delete Customer", customer_path(customer), method: :delete, :data => { :confirm => "Are you sure?"}, :class => "btn btn-danger m-1" %>
			</td>
		</tr>
	<% end %>
</table>				